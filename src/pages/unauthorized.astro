---
import Layout from '../components/Layout.astro';

const page = Astro.url.searchParams.get('page') || 'the requested page';
const pageTitle = "Unauthorized Access";
---
<Layout title={pageTitle}>
  <div class="hero min-h-[60vh]">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold text-error">Unauthorized</h1>
        <p class="py-6">You do not have the required permissions (Admin role) to access {page}.</p>
        <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
      </div>
    </div>
  </div>
</Layout> 